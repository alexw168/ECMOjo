			name="ECMOjo Uninstaller"
			programGroup="yes"
			desktop="no"
			applications="no"
			startMenu="no"
			startup="no"
			target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
			commandLine=""
			iconFile="%SystemRoot%\system32\SHELL32.dll"
